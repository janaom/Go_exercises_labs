#we can use addition (+) with strings
package main
import "fmt"
func main() {
     var a,b string = "foo", "bar"
     fmt.Println(a + b)
}
#go run main.go
foobar

#impossible to proceed: float + int
package main
import "fmt"
func main() {
     var a float64 = 5.9
     var b int = 2
     fmt.Print(a + b)
}
#go run main.go
error

#subtraction (-), can't be used with strings
package main
import "fmt"
func main() {
     var a, b float64 = 79.02, 75.66
     fmt.Printf("%.2f", a - b)
}
#go run main.go
3.36

#multiplication (*)
package main
import "fmt"
func main() {
     var a, b int = 12, 2
     fmt.Println(a * b)
}
#go run main.go
24

#division (/)
package main
import "fmt"
func main() {
     var a, b int = 24, 2
     fmt.Println(a / b)
}
#go run main.go
12

#modulus (%)
package main
import "fmt"
func main() {
     var a, b int = 24, 7
     fmt.Println(a % b)
}
#go run main.go
3

#increment (++)
package main
import "fmt"
func main() {
     var i int = 1
     i++             #unary operator.increments the value of the operand by one
     fmt.Println(i)
}
#go run main.go
2

#decrement (--)
package main
import "fmt"
func main() {
     var i int = 1
     i--             #unary operator.decrements the value of the operand by one
     fmt.Println(i)
}
#go run main.go
0
